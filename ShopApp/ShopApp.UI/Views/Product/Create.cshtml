@{
    ViewData["Title"] = "Create";
}
@model ProductCreateViewModel
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
            <h2>Product Create</h2>
        </div>
        <div class="col-md-8">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input class="form-control" asp-for="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BrandId">Brand</label>
                    <select class="form-control" asp-for="BrandId" asp-items="new SelectList(ViewBag.Brands,nameof(BrandViewModelItem.Id),nameof(BrandViewModelItem.Name))">
                      
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="SalePrice">SalePrice</label>
                    <input class="form-control" asp-for="SalePrice">
                    <span class="text-danger" asp-validation-for="SalePrice"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CostPrice">CostPrice</label>
                    <input class="form-control" asp-for="CostPrice">
                    <span class="text-danger" asp-validation-for="CostPrice"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile">ImageFile</label>
                    <input class="form-control" asp-for="ImageFile">
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

